# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-bot-token-here

# Admin Configuration
TELEGRAM_ADMINS=123456789,987654321   # список user_id админов (через запятую)

# Bot API Configuration
TELEGRAM_USE_LOCAL_BOT_API=true       # чтобы снимать лимиты на скачивание
TELEGRAM_BOT_API_URL=http://bot-api:8081  # если поднимем Local Bot API

# Service URLs
REPORT_API_URL=http://report:8005
MAIN_API_URL=http://api:8001
CV_SERVICE_URL=http://cv:8007

# File Upload Limits
MAX_FILE_SIZE_MB=20                   # стандартный лимит Bot API
LOCAL_BOT_API_MAX_SIZE_MB=2000        # лимит Local Bot API

# Bot Settings
BOT_USERNAME=your_bot_username
