{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Planner Response Schema",
  "description": "Schema for planner follow-up generation",
  "properties": {
    "reply": {
      "type": "string",
      "description": "Short follow-up response for the candidate",
      "minLength": 1,
      "maxLength": 150
    },
    "next_node_id": {
      "type": ["string", "null"],
      "description": "ID of the next interview node",
      "pattern": "^[a-zA-Z0-9_-]+$"
    },
    "follow_up_type": {
      "type": "string",
      "description": "Type of follow-up being generated",
      "enum": [
        "clarification",
        "deeper_dive",
        "example_request",
        "metric_request",
        "experience_probe",
        "technical_detail",
        "completion"
      ]
    },
    "priority": {
      "type": "string",
      "description": "Priority level for this follow-up",
      "enum": ["high", "medium", "low"]
    }
  },
  "required": ["reply", "next_node_id", "follow_up_type"],
  "additionalProperties": false
}
