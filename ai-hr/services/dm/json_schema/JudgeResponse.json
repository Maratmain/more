{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Judge Response Schema",
  "description": "Schema for judge evaluation of candidate responses",
  "properties": {
    "score": {
      "type": "number",
      "description": "Score based on success criteria (0.0 to 1.0)",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "evidence": {
      "type": "array",
      "description": "List of evidence supporting the score",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 0,
      "maxItems": 10
    },
    "confidence": {
      "type": "number",
      "description": "Confidence in the evaluation (0.0 to 1.0)",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "missing_criteria": {
      "type": "array",
      "description": "Success criteria that were not addressed",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 0,
      "maxItems": 10
    }
  },
  "required": ["score", "evidence", "confidence"],
  "additionalProperties": false
}
